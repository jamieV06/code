import sys
from PyQt5.QtWidgets import QApplication, QMainWindow, QPushButton, QGridLayout, QWidget, QMessageBox
from PyQt5.QtCore import Qt

class TicTacToe(QMainWindow):
    def __init__(self):
        super().__init__()

        self.setWindowTitle("Tic Tac Toe - Player X's Turn")
        self.setGeometry(100, 100, 400, 400)

        # Center window on screen
        self.move(QApplication.desktop().screen().rect().center() - self.rect().center())

        # Set up the game board
        self.board = ['' for _ in range(9)]
        self.current_player = "X"
        self.buttons = []

        # Set up the grid layout
        self.central_widget = QWidget()
        self.setCentralWidget(self.central_widget)
        self.grid = QGridLayout(self.central_widget)

        # Create buttons for each cell with enhanced visuals
        for i in range(9):
            button = QPushButton("")
            button.setFixedSize(120, 120)
            button.setStyleSheet("""
                QPushButton {
                    font-size: 28px;
                    font-weight: bold;
                    background-color: #f0f0f0;
                    border: 2px solid #8e8e8e;
                    border-radius: 10px;
                }
                QPushButton:pressed {
                    background-color: #e0e0e0;
                }
                QPushButton:hover {
                    background-color: #d0d0d0;
                }
            """)
            button.clicked.connect(lambda _, idx=i: self.handle_click(idx))
            self.grid.addWidget(button, i // 3, i % 3)
            self.buttons.append(button)

    def handle_click(self, idx):
        if self.board[idx] == '':  # If the cell is empty
            self.board[idx] = self.current_player
            self.buttons[idx].setText(self.current_player)
            self.buttons[idx].setEnabled(False)  # Disable the button after being clicked
            self.buttons[idx].setStyleSheet(self._get_player_style(self.current_player))  # Apply specific style for player

            if self.check_winner():
                self.highlight_winner(self.get_winning_combo())
                self.show_message(f"Player {self.current_player} wins!")
                self.reset_board()
            elif '' not in self.board:  # If the board is full and no winner
                self.show_message("It's a tie!")
                self.reset_board()
            else:
                self.current_player = "O" if self.current_player == "X" else "X"  # Switch player
                self.setWindowTitle(f"Tic Tac Toe - Player {self.current_player}'s Turn")

    def check_winner(self):
        # Check all winning combinations
        winning_combinations = [
            [0, 1, 2], [3, 4, 5], [6, 7, 8],  # Rows
            [0, 3, 6], [1, 4, 7], [2, 5, 8],  # Columns
            [0, 4, 8], [2, 4, 6]  # Diagonals
        ]
        for combo in winning_combinations:
            if self.board[combo[0]] == self.board[combo[1]] == self.board[combo[2]] != '':
                return True
        return False

    def get_winning_combo(self):
        # Return the winning combination for highlighting
        winning_combinations = [
            [0, 1, 2], [3, 4, 5], [6, 7, 8],  # Rows
            [0, 3, 6], [1, 4, 7], [2, 5, 8],  # Columns
            [0, 4, 8], [2, 4, 6]  # Diagonals
        ]
        for combo in winning_combinations:
            if self.board[combo[0]] == self.board[combo[1]] == self.board[combo[2]] != '':
                return combo
        return []

    def highlight_winner(self, combo):
        # Highlight the winning combination
        for idx in combo:
            self.buttons[idx].setStyleSheet("""
                QPushButton {
                    background-color: #ffcccb;
                    font-size: 28px;
                    font-weight: bold;
                    color: #ff0000;
                    border-radius: 10px;
                }
            """)

    def show_message(self, message):
        msg_box = QMessageBox()
        msg_box.setText(message)
        msg_box.exec_()

    def reset_board(self):
        # Reset the game board state
        self.board = ['' for _ in range(9)]
        
        # Reset the text on all buttons and enable them
        for button in self.buttons:
            button.setText("")
            button.setEnabled(True)
            button.setStyleSheet("""
                QPushButton {
                    font-size: 28px;
                    font-weight: bold;
                    background-color: #f0f0f0;
                    border: 2px solid #8e8e8e;
                    border-radius: 10px;
                }
                QPushButton:pressed {
                    background-color: #e0e0e0;
                }
                QPushButton:hover {
                    background-color: #d0d0d0;
                }
            """)
        
        # Reset the current player to "X"
        self.current_player = "X"
        self.setWindowTitle("Tic Tac Toe - Player X's Turn")

    def _get_player_style(self, player):
        # Different styles for 'X' and 'O' players
        if player == "X":
            return """
                QPushButton {
                    font-size: 28px;
                    font-weight: bold;
                    background-color: #d3f9d8;
                    color: #228B22;
                    border-radius: 10px;
                }
            """
        else:
            return """
                QPushButton {
                    font-size: 28px;
                    font-weight: bold;
                    background-color: #ffd1dc;
                    color: #ff1493;
                    border-radius: 10px;
                }
            """

if __name__ == "__main__":
    app = QApplication(sys.argv)
    game = TicTacToe()
    game.show()
    sys.exit(app.exec_())
